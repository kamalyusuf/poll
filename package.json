{
  "name": "poll",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "api:dev": "turbo dev --filter=api... --no-cache",
    "api:build": "turbo build --filter=api",
    "web:dev": "turbo dev --filter=web... --no-cache",
    "web:build": "turbo build --filter=web",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.4.4"
  },
  "packageManager": "yarn@4.5.3",
  "engines": {
    "node": ">=20.6.0"
  }
}
