{
  "name": "poll",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel --continue",
    "api:dev": "turbo run dev --filter=api... --no-cache",
    "api:build": "turbo run build --filter=api",
    "web:dev": "turbo run dev --filter=web... --no-cache",
    "web:build": "turbo run build --filter=web"
  },
  "devDependencies": {
    "prettier": "^3.0.2",
    "turbo": "^1.10.13"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.19"
}
